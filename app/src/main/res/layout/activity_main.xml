<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="264dp"
        android:autofillHints="@string/Number"
        android:backgroundTint="@color/numberColor"
        android:maxLines="1"
        android:padding="11dp"
        android:textAlignment="center"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNumber1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/ic_baseline_call_24"
        android:contentDescription="@string/btnCall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnBackspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:background="@drawable/slt_backspace_button"
        android:contentDescription="@string/btnBackspace"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtNumber"
        app:layout_constraintStart_toStartOf="@+id/edtNumber" />

    <Button
        android:id="@+id/btnNumber1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber1"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNumber4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNumber2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber2"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber1"
        app:layout_constraintStart_toEndOf="@+id/btnNumber1"
        app:layout_constraintTop_toTopOf="@+id/btnNumber1" />

    <Button
        android:id="@+id/btnNumber3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber3"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber2"
        app:layout_constraintStart_toEndOf="@+id/btnNumber2"
        app:layout_constraintTop_toTopOf="@+id/btnNumber2" />

    <Button
        android:id="@+id/btnNumber4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber4"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNumber7"
        app:layout_constraintEnd_toEndOf="@+id/btnNumber1"
        app:layout_constraintStart_toStartOf="@+id/btnNumber1" />

    <Button
        android:id="@+id/btnNumber5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber5"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber4"
        app:layout_constraintStart_toEndOf="@+id/btnNumber4"
        app:layout_constraintTop_toTopOf="@+id/btnNumber4" />

    <Button
        android:id="@+id/btnNumber6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber6"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber5"
        app:layout_constraintStart_toEndOf="@+id/btnNumber5"
        app:layout_constraintTop_toTopOf="@+id/btnNumber5" />

    <Button
        android:id="@+id/btnNumber7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber7"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAsterisk"
        app:layout_constraintEnd_toEndOf="@+id/btnNumber4"
        app:layout_constraintStart_toStartOf="@+id/btnNumber4" />

    <Button
        android:id="@+id/btnNumber8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber8"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber7"
        app:layout_constraintStart_toEndOf="@+id/btnNumber7"
        app:layout_constraintTop_toTopOf="@+id/btnNumber7" />

    <Button
        android:id="@+id/btnNumber9"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnNumber9"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber8"
        app:layout_constraintStart_toEndOf="@+id/btnNumber8"
        app:layout_constraintTop_toTopOf="@+id/btnNumber8" />

    <Button
        android:id="@+id/btnAsterisk"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnAsterisk"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCall"
        app:layout_constraintEnd_toEndOf="@+id/btnNumber7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnNumber7" />

    <Button
        android:id="@+id/btnNumber0"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"

        android:background="@drawable/slt_button"
        android:text="@string/btnNumber0"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAsterisk"
        app:layout_constraintStart_toEndOf="@+id/btnAsterisk"
        app:layout_constraintTop_toTopOf="@+id/btnAsterisk" />

    <Button
        android:id="@+id/btnHashTag"

        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/slt_button"
        android:text="@string/btnHashTag"
        android:textColor="@color/numberColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnNumber0"
        app:layout_constraintStart_toEndOf="@+id/btnNumber0"
        app:layout_constraintTop_toTopOf="@+id/btnNumber0" />


</androidx.constraintlayout.widget.ConstraintLayout>
